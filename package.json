{
  "name": "simpler-library",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/simpler-library.umd.cjs",
  "module": "./dist/simpler-library.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/simpler-library.es.js",
      "require": "./dist/simpler-library.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "prepack": "json -f package.json -I -e \"delete this.devDependencies; delete this.dependencies\"",
    "preview": "vite preview --host",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles:fix",
    "lint:scripts": "eslint --ext .ts,.tsx src",
    "lint:scripts:fix": "npm run lint:scripts -- --fix",
    "lint:styles": "stylelint \"src/**/*.css\"",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "prepare": "husky install",
    "storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider start-storybook -p 6006",
    "build-storybook": "cross-env NODE_OPTIONS=--openssl-legacy-provider build-storybook"
  },
  "authors": [
    {
      "name": "Artsiom Hanchar",
      "email": "artsiom.hanchar@gmail.com",
      "url": "https://github.com/A-Hanchar"
    },
    {
      "name": "Vitaly Kovalev",
      "email": "kovalevvtl@gmail.com",
      "url": "https://github.com/sohodoll"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@ngneat/falso": "^6.4.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/addons": "^6.5.16",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.16",
    "@storybook/theming": "^6.5.16",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/coverage-c8": "^0.29.8",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^8.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.2.2",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stylelint": "^15.3.0",
    "stylelint-config-recommended": "^11.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.2.0",
    "vite-plugin-dts": "^2.2.0",
    "vite-plugin-tsc-watch": "^2.0.1",
    "vitest": "^0.29.8"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .ts,.tsx src --fix"
    ],
    "*.css": [
      "prettier --write",
      "stylelint \"src/**/*.css\" --fix"
    ],
    "*.{json,cjs,md,html}": [
      "prettier --write"
    ]
  }
}
